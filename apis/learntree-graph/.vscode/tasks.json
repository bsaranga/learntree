{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["stoppm2"],
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ltgraph.api/ltgraph.api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/learntree_graph.api/leantree_graph.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/learntree_graph.api/leantree_graph.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "stoppm2",
            "type": "shell",
            "command": "pm2 stop 'Learn Tree Graph API'",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "startpm2",
            "type": "shell",
            "command": "pm2 start 'Learn Tree Graph API'",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}